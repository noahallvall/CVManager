@model CVViewModel

<form method="post" asp-action="CV">
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Ange beskrivning</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Summary" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Ange CV bild:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="ProfilePicturePath" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Lägg till CV</button>
</form>