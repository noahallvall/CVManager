@model KontoAltViewModel

<form method="post" asp-action="KontoAlt">
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Byta förnamn:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Byta efternamn:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Ändra adress:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Ändra Email:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Ändra telefonnummer:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Nytt lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Losenord" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label for="CurrentPassword">Nuvarande lösenord:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="CurrentPassword" class="form-control" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-sm-4">
            <label>Vill du ha privat profil?</label>
            <input type="checkbox" title="PrivateProfile" asp-for="IsPrivateProfile" class="form-check" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Ändra kontots uppgifter</button>
        </div>
    </div>
</form>