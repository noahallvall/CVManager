@model ProjektViewModel

<form method="post" asp-action="Projekt">
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Ange projektnamn</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="ProjectName" class="form-control" />
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Ange projektbeskrivning:</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="ProjectDescription" class="form-control" />
            <span asp-validation-for="ProjectDescription" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Lägg till Projekt</button>
</form>


