@model IEnumerable<CVManager.WebApplication.Models.VisaProjektViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Projekt ID</th>
            <th>Projekt Namn</th>
            <th>Beskrivning</th>
            <th>Uppladdningsdatum</th>
            <th>Användare i projektet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projekt in Model)
        {
            <tr>
                <td>@projekt.ProjectID</td>
                <td>@projekt.ProjectName</td>
                <td>@projekt.ProjectDescription</td>
                <td>@(projekt.UploadDate.HasValue ? projekt.UploadDate.Value.ToString("yyyy-MM-dd") : "1970-01-01")</td>
                <td>
                    @if (projekt.UsersInProject.Any())
                    {
                        <ul>
                            @foreach (var user in projekt.UsersInProject)
                            {
                                <li>@user</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Inga användare</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
